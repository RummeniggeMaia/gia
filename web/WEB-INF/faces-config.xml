<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->
<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/testes_site/visitante/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--P치ginas dos visitantes-->
    <navigation-rule> 
        <from-view-id>/testes_site/visitante/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>criar_users</from-outcome>
            <to-view-id>/testes_site/visitante/cadastro_usuarios.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{visitanteMB.entrarNoSistema()}</from-action>
            <from-outcome>role_user</from-outcome>
            <to-view-id>/testes_site/usuario/home.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{visitanteMB.entrarNoSistema()}</from-action>
            <from-outcome>role_admin</from-outcome>
            <to-view-id>/testes_site/admin/home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/testes_site/visitante/cadastro_usuarios.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>usuario_criado</from-outcome>
            <to-view-id>/testes_site/visitante/usuario_criado.xhtml</to-view-id>
        </navigation-case> 
    </navigation-rule>
    <!--P치ginas dos usu치rios-->
    <navigation-rule>
        <from-view-id>/testes_site/usuario/home.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>usuario_config</from-outcome>
            <to-view-id>/testes_site/usuario/config.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/testes_site/usuario/config.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editar_conta</from-outcome>
            <to-view-id>/testes_site/usuario/editar_conta.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--P치ginas dos administradores-->
    <navigation-rule>
        <from-view-id>/testes_site/admin/home.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adm_docs</from-outcome>
            <to-view-id>/testes_site/admin/gerenciar_documentos.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>adm_usuarios</from-outcome>
            <to-view-id>/testes_site/admin/gerenciar_usuarios.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/testes_site/admin/gerenciar_documentos.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adm_tipos</from-outcome>
            <to-view-id>/testes_site/admin/gerenciar_tipos.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>criar_editar_docs</from-outcome>
            <to-view-id>/testes_site/admin/criar_editar_documentos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/testes_site/admin/gerenciar_tipos.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cancelar</from-outcome>
            <to-view-id>/testes_site/admin/gerenciar_documentos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
